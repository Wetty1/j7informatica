<h1>Produtos</h1>
<div class="form-control">
    {{!-- Formulario para adcionar produto
        ( Nome, Descrição, Valor )
        "Ao criar o produto formará uma entrada e uma saida vazia"
    --}}
    <h2>Adicionar produto</h2>
    <form action="/admin/addproduto" method="post" enctype="multipart/form-data">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <div class="form-group">
                        <label for="produto">Produto</label>
                        <input name="nome" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Nome do produto" required>
                    </div>
                </div>
                <div class="col">
                    <div class="form-group">
                        <label for="descricao">Valor</label>
                        <input name="valor" type="number" class="form-control" id="valor" placeholder="Valor" required>
                    </div>
                </div> 
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="descricao">Descrição</label>
                        <input name="descricao" type="text" class="form-control" id="descricao" placeholder="Uma Breve descrição do produto" required>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-group">
                        <label for="imagem">Imagem</label>
                        <input name="thumbnail" type="file" class="form-control" id="imagem" 
                            placeholder="Uma Breve descrição do produto" accept="image/png, image/jpeg" max-size="32000" required>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-success">Criar produto</button>
        </div>
    </form>
</div>
<script>
    var uploadField = document.getElementById("file");

    uploadField.onchange = function() {
        if(this.files[0].size > 80000){
            alert("File is too big!");
            this.value = "";
        };
    };
</script>
<br>
<hr>
<br>
<div class="container">
    <div class="d-flex">
        <div class="card d-flex">
            {{#each produtos}}
                <div class="card-body">
                    <img class="rounded img-thumbnail" style="width: 200px; height: 200px;" src="./../../../files/{{thumbnail}}" alt="{{thumbnail}}"><br>
                    <label>Produto: {{nome}} </label><br>
                    <span>Valor: </span><span>{{valor}}</span><br>
                    <label>Descricao: {{descricao}} </label><br>
                    <label>Estoque: {{estoque}} </label><br>
                    {{#unless ativo}} <label style="color: red;">Desativado</label><br> {{/unless}}
                    <button class="btn btn-success btn-block" data-toggle="modal" data-target="#addmodal-{{_id}}">Add Estoque</button>
                    
                    <button class="btn btn-warning btn-block" data-toggle="modal" data-target="#modal-{{_id}}">Editar</button><br>
                    <form method="post" action="/admin/desativarproduto/{{_id}}?_method=PUT">
                        <input type="hidden" name="_method" value="PUT">
                        <button class="btn btn-danger btn-block" type="submit">Desativar</button>
                    </form>
                </div>

                <!-- Modal Add Estoque-->
                <div class="modal" id="addmodal-{{_id}}" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <form action="/admin/addestoque" method="POST">
                            <input type="hidden" name="id" value="{{_id}}">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Adicionar ao Estoque</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="col">
                                        <div class="form-group">
                                            <label for="descricao">Valor</label>
                                            <input name="quantidade" type="number" class="form-control" id="id{{_id}}" value="1" placeholder="quantidade" required>
                                        </div>
                                    </div> 
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-success">Adicionar</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Modal Edição -->
                <div class="modal fade" id="modal-{{_id}}" tabindex="-1" role="dialog" aria-labelledby="ModalEdite" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <form method="post" action="/admin/editproduto/{{_id}}?_method=PUT" enctype="multipart/form-data">
                            <input type="hidden" name="_method" value="PUT">    
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Editar Produto</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-8">
                                            <div class="form-group">
                                                <label for="produto">Produto</label>
                                                <input name="nome" type="text" class="form-control" id="produto-{{_id}}" value="{{nome}}" aria-describedby="emailHelp" placeholder="Nome do produto" required>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="descricao">Valor</label>
                                                <input name="valor" type="number" class="form-control" id="valor-{{_id}}" value="{{valor}}" placeholder="Valor" required>
                                            </div>
                                        </div> 
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="descricao">Descrição</label>
                                                <input name="descricao" type="text" class="form-control" id="descricao-{{_id}}" value="{{descricao}}" placeholder="Uma Breve descrição do produto" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="imagem">Imagem</label>
                                                <input name="thumbnail" type="file" class="form-control" id="imageme" 
                                                    placeholder="Uma Breve descrição do produto" accept="image/png, image/jpeg" max-size="32000">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                           <div class="form-group form-check ml-3">
                                                <input name="ativo" type="checkbox" class="form-check-input" id="exampleCheck-{{_id}}" 
                                                {{#if ativo}} checked{{/if}}>
                                                <label class="form-check-label" for="exampleCheck-{{_id}}">Ativo</label>
                                            </div>
                                        </div>
                                    </div>
                                    

                                    {{!-- <button type="submit" class="btn btn-primary">Submit</button> --}}
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                <button type="submit" class="btn btn-success" type="submit">Salvar</button>
                            </div>
                        </form>
                    </div>
                </div>
                </div>
            {{else}}
                <div class="card-body">
                    <img class="rounded img-thumbnail" style="width: 200px; height: 200px;" src="./../../../files/vazio.png" alt="..."><br>
                    <label>Produto: </label><br>
                    <span>Valor: </span><span>R$ </span><br>
                    <button class="btn btn-success btn-block" disabled>Add Estoque</button><br>
                    <button class="btn btn-warning btn-block" disabled>Editar</button><br>
                    <button class="btn btn-danger btn-block" disabled>Desativar</button>
                </div>
            {{/each}}
        </div>
    </div>
</div>
